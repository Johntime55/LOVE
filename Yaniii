@using MyLibrary.ADClasses
@{ var usrData = new UserInfo(); }

@model IEnumerable<MyLibrary.Models.BooksAvailable>

@{
    ViewBag.Title = "Books Availables";
}

<style>
    .table-container {
        margin: 20px auto;
        max-width: 80%;
    }

    .table-container table {
